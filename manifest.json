{
  "manifest_version": 3,
  "name": "Web Roulette",
  "version": "1.0",
  "description": "Open a random cool website with one click",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs"]
}
